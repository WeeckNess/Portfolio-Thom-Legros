---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import fitquest1 from "../assets/mockups/fitquest-1.png";
import SneakR from "../assets/SneakR-preview.png";
import Osmoz from "../assets/preview-osmoz.png";

interface Project {
  title: string;
  image: ImageMetadata;
  link: string;
  preview: string;
  status: string;
}

const projects: Project[] = [
  {
    title: "Fit Quest",
    image: fitquest1,
    preview: "/project/fit-quest",
    status: "On Development",
  },
  {
    title: "Osmoz",
    image: Osmoz,
    link: "http://osmoz.kesug.com/",
    preview: "https://osmoz.kesug.com/",
    status: "En développement sur WordPress",
  },
  {
    title: "SneakR",
    image: SneakR,
    link: "https://github.com/pheralb/svgl",
    preview: "https://svgl.app",
    status: "Contributor",
  },
];
---

<style>
/* Couleur de fond personnalisée */
.bg-custom-dark {
  background-color: #424242;
}

/* Couleur de texte personnalisée */
.text-custom-green {
  color: #C1FA36;
}

/* Styles pour les cartes */
.project-card {
  height: 100%;
  display: flex;
  flex-direction: column;
  border: 1px solid rgba(147, 51, 234, 0.3); /* Violet clair */
  border-radius: 1rem;
  overflow: hidden;
  transition: all 0.3s ease, transform 0.3s ease;
}

.project-card:hover {
  border-color: rgba(130, 0, 244, 0.5); /* Violet plus foncé */
  box-shadow: 0 10px 25px rgba(132, 0, 255, 0.25); /* Glow violet */
  transform: translateY(-10px); /* Légère translation vers le haut */
}

.project-image {
  height: 300px;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.project-card:hover .project-image {
  transform: scale(1.05); /* Zoom léger sur l'image */
}

.project-content {
  flex-grow: 1;
  padding: 1.5rem;
  position: relative;
}

.project-buttons {
  display: flex;
  gap: 0.5rem;
  margin-top: 1rem;
}

.project-button {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0.5rem 1rem;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 0.5rem;
  background-color: rgba(20, 20, 20, 0.6);
  color: rgba(255, 255, 255, 0.8);
  text-decoration: none;
  font-size: 0.875rem;
  transition: all 0.3s ease;
}

.project-button:hover {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border-color: rgba(255, 255, 255, 0.5);
}

.project-button svg {
  width: 1rem;
  height: 1rem;
  margin-right: 0.5rem;
}
</style>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  {projects.map((project) => (
    <div class="project-card">
      <a href={project.preview} target="_blank" rel="noopener noreferrer">
        <Image
          src={project.image}
          alt={project.title}
          class="w-full project-image"
          width={800}
          height={450}
          format="webp"
          quality={80}
        />
      </a>
      <div class="project-content">
        <h3 class="text-2xl font-bold text-white mb-2">{project.title}</h3>
        <p class="text-sm text-custom-green">{project.status}</p>
        <div class="project-buttons">
          {/* Boutons spécifiques à chaque projet */}
          {project.title === "Fit Quest" && (
            <>
              <a
                href="https://www.figma.com/community/file/1489203913336488946/fit-quest"
                target="_blank"
                rel="noopener noreferrer"
                class="project-button"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="w-5 h-5 mr-2"
                >
                  <path d="M12 2C10.3431 2 9 3.34315 9 5C9 6.65685 10.3431 8 12 8C13.6569 8 15 6.65685 15 5C15 3.34315 13.6569 2 12 2ZM9 9C7.34315 9 6 10.3431 6 12C6 13.6569 7.34315 15 9 15C10.6569 15 12 13.6569 12 12C12 10.3431 10.6569 9 9 9ZM15 9C13.3431 9 12 10.3431 12 12C12 13.6569 13.3431 15 15 15C16.6569 15 18 13.6569 18 12C18 10.3431 16.6569 9 15 9ZM9 16C7.34315 16 6 17.3431 6 19C6 20.6569 7.34315 22 9 22C10.6569 22 12 20.6569 12 19C12 17.3431 10.6569 16 9 16ZM15 16C13.3431 16 12 17.3431 12 19C12 20.6569 13.3431 22 15 22C16.6569 22 18 20.6569 18 19C18 17.3431 16.6569 16 15 16Z" />
                </svg>
                Figma
              </a>
              <a
                href={project.preview}
                target="_blank"
                rel="noopener noreferrer"
                class="project-button"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="w-5 h-5 mr-2"
                >
                  <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
                </svg>
                Preview
              </a>
            </>
          )}
          {project.title === "Osmoz" && (
            <a
              href={project.preview}
              target="_blank"
              rel="noopener noreferrer"
              class="project-button"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="w-5 h-5 mr-2"
              >
                <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
              </svg>
              Preview
            </a>
          )}
          {project.title === "SneakR" && (
            <>
              <a
                href={project.link}
                target="_blank"
                rel="noopener noreferrer"
                class="project-button"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="w-5 h-5 mr-2"
                >
                  <path d="M24 12L18.3431 17.6569L16.9289 16.2426L21.1716 12L16.9289 7.75736L18.3431 6.34315L24 12ZM2.82843 12L7.07107 16.2426L5.65685 17.6569L0 12L5.65685 6.34315L7.07107 7.75736L2.82843 12ZM9.78845 21H7.66009L14.2116 3H16.3399L9.78845 21Z" />
                </svg>
                GitHub
              </a>
              <a
                href={project.preview}
                target="_blank"
                rel="noopener noreferrer"
                class="project-button"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="w-5 h-5 mr-2"
                >
                  <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
                </svg>
                Preview
              </a>
            </>
          )}
        </div>
      </div>
    </div>
  ))}
</div>